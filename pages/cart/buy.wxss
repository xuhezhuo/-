page {
  background-color: #f7f7f7;
}

.addressM {
  background-color: #fff;
  padding: 21rpx 3rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.81);
}

.address {
  /* margin-top: 6rpx; */
}

.location {
  width: 32rpx;
  position: relative;
  top: 49rpx;
}

.arrow {
  width: 18rpx;
  position: relative;
  top: 49rpx;
}

.cross {
  line-height: 0;
  background-color: #fff;
}

.cross image {
  width: 100%;
}

.productM{
  margin-top: 21rpx;
  background-color: #fff;
  padding-left: 17rpx;
}

.item{
  padding: 21rpx;
  padding-left: 0;
  padding-right: 0;
}

.item .detail{
  padding-left: 21rpx;
}

.col-28{
  width: 28%;
}

.col-72{
  width: 72%;
}

.item > .col-28{
  line-height:0;
}

.item image{
  width: 100%;
}

.name{
  font-size: 30rpx;
  width: 90%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: rgba(0,0,0,0.81);
}

.model{
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.price{
  margin-top: 12rpx;
}

.amount{
  font-size: 29rpx;
  color: #666;
}

.total {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  line-height: 108rpx;
  background-color: #fff;
}

.total .delivery{
  padding-left: 21rpx;
  font-size: 36rpx;
  line-height: 120rpx;
  font-weight: 300;
}

.total .price{
  font-size: 36rpx;
  line-height: 100rpx;
  font-weight: 300;
}

.total button{
  display: unset;
  font-size: 27rpx;
  color: #fff;
  padding: 22rpx 21rpx;
  border-radius: 16rpx;
}