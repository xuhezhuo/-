page {
  background-color: #f7f7f7;
}

.title {
  padding: 27rpx 32rpx;
  font-size: 35rpx;
}

.title image {
  width: 40rpx;
  position: relative;
  top: 8rpx;
  margin-right: 16rpx;
}

.item {
  background-color: #fff;
  padding: 27rpx 12rpx;
  padding-right: 0;
}

.item .brief {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .date {
  font-size: 27rpx;
  position: relative;
  top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: 'Times New Roman', Times, serif;
}

.history, .wrapper2{
  color: #999;
}


