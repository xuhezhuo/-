/* 导入weUI  */
@import 'weui.wxss';

/**app.wxss**/
.container {
  height: 100%;  
  display: flex;
  flex-direction: column;
   /* align-items: center;  */
  justify-content: space-between;  
  box-sizing: border-box; 
  overflow-x: hidden;
  width:100%;
} 

.flex-row{
  display: flex;
  flex-direction: row;
}

